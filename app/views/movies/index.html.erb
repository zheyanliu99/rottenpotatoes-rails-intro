<h2>All Movies</h2>

<%# <%= debug session %>

<%#  Part 1: Start here... %>
<%= form_tag movies_path, method: :get, id: 'ratings_form' do %>
  Include:
  <% @all_ratings.each do |rating| %>
    <div class="form-check  form-check-inline">
      <%= label_tag "ratings[#{rating}]", rating, class: 'form-check-label' %>
      <%= check_box_tag "ratings[#{rating}]", "1",  @ratings_to_show.include?(rating), class: 'form-check-input' %>
    </div>
  <% end %>
  <%= submit_tag 'Refresh', id: 'ratings_submit', class: 'btn btn-primary' %>
<% end %>


<table class="table table-striped col-md-12" id="movies">
  <thead>
    <tr>
      <% if @sort_by == 'title' %>
        <th bgcolor="yellow"><%= link_to "Movie Title", movies_path(:sort_by => 'title', :ratings => @ratings_to_show.each_with_object({}) { |k, h| h[k] = 1 }),id: 'title_header' %></th>
      <% else %>
        <th><%= link_to "Movie Title", movies_path(:sort_by => 'title', :ratings => @ratings_to_show.each_with_object({}) { |k, h| h[k] = 1 }),id: 'title_header' %></th>
      <% end %>
      <th>Rating</th>
      <% if @sort_by == 'release_date' %>
        <th bgcolor="yellow"><%= link_to "Release Date", movies_path(:sort_by => 'release_date', :ratings => @ratings_to_show.each_with_object({}) { |k, h| h[k] = 1 }), id: 'release_date_header' %></th>
      <% else %>
        <th><%= link_to "Release Date", movies_path(:sort_by => 'release_date', :ratings => @ratings_to_show.each_with_object({}) { |k, h| h[k] = 1 }), id: 'release_date_header' %></th>
      <% end %>
      <th>More Info</th>
    </tr>
  </thead>
  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td>
          <%= movie.title %>
        </td>
        <td>
          <%= movie.rating %>
        </td>
        <td>
          <%= movie.release_date %>
        </td>
        <td>
          <%= link_to "More about #{movie.title}", movie_path(movie) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Add new movie', new_movie_path, :class => 'btn btn-primary' %>
